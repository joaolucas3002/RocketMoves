generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Post {
  id    String   @id @default(uuid())
  date  DateTime @default(now())
  title String
  post  String
  star  Int      @default(0)
  tags  Tag[]

  @@map("posts")
}

model Tag {
  id     String @id @default(uuid())
  tag    String
  post   Post   @relation(fields: [postId], references: [id])
  postId String

  @@index([postId])
  @@map("tags")
}
